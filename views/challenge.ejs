        <p>
            <%= info[pid - 1].CONTENTS %>
        </p>

        <% if (info[pid - 1].FILE_PATH != "false") { %>
            <a href="<%= info[pid - 1].FILE_PATH %>" download="<%= info[pid - 1].TITLE %>">Download link</a>
            <br>
        <% } %>
        <br>
        <p id="history">
            â†“
        </p>
        
        <form action="javascript:void(0);">
            <p class="input-cover">
                <span id="user-information"><%= user_id %>@<%= user_school %>:/challenges/<%= info[pid - 1].TITLE %>$ </span>
                <input class="input" type="text" autocomplete="off autofocus">
            </p>
        </form>
    </div>
    
    
